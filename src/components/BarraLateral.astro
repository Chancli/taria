---

const peliculasPopulares = [
  { title: "Popular1", image: "https://www.mywalldecorator.com/public/pages/frame-white-100-150.jpeg", rating: 4.5, category: "Acción", ageRating: "PG-13" },
    { title: "Popular2", image: "https://www.mywalldecorator.com/public/pages/frame-white-100-150.jpeg", rating: 4.0, category: "Comedia", ageRating: "PG" },
      { title: "Popular 3", image: "https://www.mywalldecorator.com/public/pages/frame-white-100-150.jpeg", rating: 4.8, category: "Drama", ageRating: "R" },
      ];

      const peliculasRecomendadas = [
        { title: "Recomendado 1", image: "https://www.mywalldecorator.com/public/pages/frame-white-100-150.jpeg", rating: 4.2, category: "Terror", ageRating: "R" },
          { title: "Recomendado 2", image: "https://www.mywalldecorator.com/public/pages/frame-white-100-150.jpeg", rating: 4.6, category: "Aventura", ageRating: "PG" },
            { title: "Recomendado 3", image: "https://www.mywalldecorator.com/public/pages/frame-white-100-150.jpeg", rating: 4.1, category: "Ciencia Ficción", ageRating: "PG-13" },
            ];
            ---

            <div class="background-color:#1F1F27 text-white p-4 w-64">
              <h2 class="text-xl font-bold mb-4">Populares</h2>
                <div class="grid grid-cols-1 gap-4 mb-4">
                    {peliculasPopulares.map(movie => (
                          <div class=" p-2 pl-0 flex items-center">
                                  <img src={movie.image} alt={movie.title} class="w-16 h-24 rounded-lg mr-2" />
                                          <div>
                                                    <h3 class="font-semibold">{movie.title}</h3>
                                                              <p class="text-gray-200 text-xs">{movie.category}</p>
                                                              <p class="text-gray-350 text-xs bg-gray-600 flex justify-center w-1/2 mt-2 text-center rounded">{movie.ageRating}</p>
                                                              <div class="flex items-center mt-1">
                                                                          {Array.from({ length: 5 }, (_, index) => (
                                                                                        <svg
                                                                                                        class={`w-4 h-4 ${index < Math.round(movie.rating) ? 'text-yellow-400' : 'text-gray-400'}`}
                                                                                                                        fill="currentColor"
                                                                                                                                        viewBox="0 0 20 20"
                                                                                                                                                        xmlns="http://www.w3.org/2000/svg"
                                                                                                                                                                      >
                                                                                                                                                                                      <path d="M10 15l-5.878 3.09 1.121-6.535L0 6.545l6.545-.955L10 0l2.455 5.59L20 6.545l-5.243 4.005 1.121 6.535z" />
                                                                                                                                                                                                    </svg>
                                                                                                                                                                                                                ))}
                                                                                                                                                                                                                          </div>
                                                                                                                                                                                                                                  </div>
                                                                                                                                                                                                                                        </div>
                                                                                                                                                                                                                                            ))}
                                                                                                                                                                                                                                              </div>
                                                                                                                                                                                                                                                <button class="mt-4 bg-verde-boton rounded-lg text-white py-2 px-4">Mostrar más</button>

                                                                                                                                                                                                                                                  <h2 class="text-xl font-bold mt-8 mb-4">Recomendados</h2>
                                                                                                                                                                                                                                                    <div class="grid grid-cols-1 gap-4">
                                                                                                                                                                                                                                                        {peliculasRecomendadas.map(movie => (
                                                                                                                                                                                                                                                              <div class="p-2 pl-0 flex items-center">
                                                                                                                                                                                                                                                                      <img src={movie.image} alt={movie.title} class="w-16 h-24 rounded-lg mr-2" />
                                                                                                                                                                                                                                                                              <div>
                                                                                                                                                                                                                                                                                        <h3 class="font-semibold">{movie.title}</h3>
                                                                                                                                                                                                                                                                                                  <p class="text-gray-200 text-xs">{movie.category}</p>
                                                                                                                                                                                                                                                                                                  <p class="text-gray-350 text-xs bg-gray-600 flex justify-center w-1/2 mt-2 text-center rounded">{movie.ageRating}</p>
                                                                                                                                                                                                                                                                                                  <div class="flex items-center mt-1">
                                                                                                                                                                                                                                                                                                              {Array.from({ length: 5 }, (_, index) => (
                                                                                                                                                                                                                                                                                                                            <svg
                                                                                                                                                                                                                                                                                                                                            class={`w-4 h-4 ${index < Math.round(movie.rating) ? 'text-yellow-400' : 'text-gray-400'}`}
                                                                                                                                                                                                                                                                                                                                                            fill="currentColor"
                                                                                                                                                                                                                                                                                                                                                                            viewBox="0 0 20 20"
                                                                                                                                                                                                                                                                                                                                                                                            xmlns="http://www.w3.org/2000/svg"
                                                                                                                                                                                                                                                                                                                                                                                                          >
                                                                                                                                                                                                                                                                                                                                                                                                                          <path d="M10 15l-5.878 3.09 1.121-6.535L0 6.545l6.545-.955L10 0l2.455 5.59L20 6.545l-5.243 4.005 1.121 6.535z" />
                                                                                                                                                                                                                                                                                                                                                                                                                                        </svg>
                                                                                                                                                                                                                                                                                                                                                                                                                                                    ))}
                                                                                                                                                                                                                                                                                                                                                                                                                                                              </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                      </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                            </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                ))}
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <button class="mt-4 bg-verde-boton text-white py-2 px-4 rounded-lg">Mostrar más</button>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    </div>