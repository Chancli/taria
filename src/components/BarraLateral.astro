---

const peliculasPopulares = [
  { title: "Mea culpa", image: "https://images.justwatch.com/poster/311598725/s718/mea-culpa-2024.jpg", rating: 4.5, category: "Acción", ageRating: "PG-13" },
    { title: "Bettlejuice 2", image: "https://www.sabor.it/wp-content/uploads/2024/06/90071000002345424_zc_v1_1700573525488_image002.jpg", rating: 4.0, category: "Comedia", ageRating: "PG" },
      { title: "Sonic 3", image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTMCwOY37rUYmzrDbtoqm3bWvk0AqDLXRr2BQ&s", rating: 4.8, category: "Drama", ageRating: "R" },
      ];

      const peliculasRecomendadas = [
        { title: "Avatar", image: "https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEg8pAp7zqM7cHgNa4urMYIa5m39ymIa53u6CyOLwYHInm3FFE75z7rhUvGdzzq0P2sdx47yeESaKioRXrXoXCIu6SlzNBNrG8-K277SdfavAiGJFjDaIacUsXU5jbZlWCNXOSoewFLrKws/s1600/Final-Avatar-Poster-8-12-09-kc.jpg", rating: 4.2, category: "Terror", ageRating: "R" },
          { title: "Random Hearths", image: "https://image.tmdb.org/t/p/original/k7LoKDWDesvYD7DXDh9Ewlxtcx8.jpg", rating: 4.6, category: "Aventura", ageRating: "PG" },
            { title: "Carrie", image: "https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEhqE-7k8LKMFoL_cc17NNLcRo1Dk4IqeYzLlGN7elXYnXaLlfN92ffw6iLYcG19LZARhz3rdxEU7mX5QVvYFywdumqx5MtBXZAkzu3L4JJP9Nmts1UhTEWmB6ZAvVEFpCOnqlqIVYSqjIeI/s1600/Carrie.jpg", rating: 4.1, category: "Ciencia Ficción", ageRating: "PG-13" },
            ];
            ---

            <div class="background-color:#1F1F27 text-white p-4 w-64">
              <h2 class="text-xl font-bold mb-4">Populares</h2>
                <div class="grid grid-cols-1 gap-4 mb-4">
                    {peliculasPopulares.map(movie => (
                          <div class=" p-2 pl-0 flex items-center">
                                  <img src={movie.image} alt={movie.title} class="w-16 h-24 rounded-lg mr-2" />
                                          <div>
                                                    <h3 class="font-semibold">{movie.title}</h3>
                                                              <p class="text-gray-200 text-xs">{movie.category}</p>
                                                              <p class="text-gray-350 text-xs bg-gray-600 flex justify-center w-1/2 mt-2 text-center rounded">{movie.ageRating}</p>
                                                              <div class="flex items-center mt-1">
                                                                          {Array.from({ length: 5 }, (_, index) => (
                                                                                        <svg
                                                                                                        class={`w-4 h-4 ${index < Math.round(movie.rating) ? 'text-yellow-400' : 'text-gray-400'}`}
                                                                                                                        fill="currentColor"
                                                                                                                                        viewBox="0 0 20 20"
                                                                                                                                                        xmlns="http://www.w3.org/2000/svg"
                                                                                                                                                                      >
                                                                                                                                                                                      <path d="M10 15l-5.878 3.09 1.121-6.535L0 6.545l6.545-.955L10 0l2.455 5.59L20 6.545l-5.243 4.005 1.121 6.535z" />
                                                                                                                                                                                                    </svg>
                                                                                                                                                                                                                ))}
                                                                                                                                                                                                                          </div>
                                                                                                                                                                                                                                  </div>
                                                                                                                                                                                                                                        </div>
                                                                                                                                                                                                                                            ))}
                                                                                                                                                                                                                                              </div>
                                                                                                                                                                                                                                                <button class="mt-4 bg-verde-boton rounded-lg text-white py-2 px-4">Mostrar más</button>

                                                                                                                                                                                                                                                  <h2 class="text-xl font-bold mt-8 mb-4">Recomendados</h2>
                                                                                                                                                                                                                                                    <div class="grid grid-cols-1 gap-4">
                                                                                                                                                                                                                                                        {peliculasRecomendadas.map(movie => (
                                                                                                                                                                                                                                                              <div class="p-2 pl-0 flex items-center">
                                                                                                                                                                                                                                                                      <img src={movie.image} alt={movie.title} class="w-16 h-24 rounded-lg mr-2" />
                                                                                                                                                                                                                                                                              <div>
                                                                                                                                                                                                                                                                                        <h3 class="font-semibold">{movie.title}</h3>
                                                                                                                                                                                                                                                                                                  <p class="text-gray-200 text-xs">{movie.category}</p>
                                                                                                                                                                                                                                                                                                  <p class="text-gray-350 text-xs bg-gray-600 flex justify-center inline-block w-1/2 mt-2 m=0text-center rounded">{movie.ageRating}</p>
                                                                                                                                                                                                                                                                                                  <div class="flex items-center mt-1">
                                                                                                                                                                                                                                                                                                              {Array.from({ length: 5 }, (_, index) => (
                                                                                                                                                                                                                                                                                                                            <svg
                                                                                                                                                                                                                                                                                                                                            class={`w-4 h-4 ${index < Math.round(movie.rating) ? 'text-yellow-400' : 'text-gray-400'}`}
                                                                                                                                                                                                                                                                                                                                                            fill="currentColor"
                                                                                                                                                                                                                                                                                                                                                                            viewBox="0 0 20 20"
                                                                                                                                                                                                                                                                                                                                                                                            xmlns="http://www.w3.org/2000/svg"
                                                                                                                                                                                                                                                                                                                                                                                                          >
                                                                                                                                                                                                                                                                                                                                                                                                                          <path d="M10 15l-5.878 3.09 1.121-6.535L0 6.545l6.545-.955L10 0l2.455 5.59L20 6.545l-5.243 4.005 1.121 6.535z" />
                                                                                                                                                                                                                                                                                                                                                                                                                                        </svg>
                                                                                                                                                                                                                                                                                                                                                                                                                                                    ))}
                                                                                                                                                                                                                                                                                                                                                                                                                                                              </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                      </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                            </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                ))}
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <button class="mt-4 bg-verde-boton text-white py-2 px-4 rounded-lg">Mostrar más</button>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    </div>